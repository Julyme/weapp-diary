/* pages/addPlan/addPlan.wxss */
.addPlan {
  width: 100%;
  height: 100%;
}

.plan-header {
  width: 96%;
  position: relative;
  left: 2%;
  height: 70rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  /* justify-content: space-between; */
  /* background-color: rgb(244, 118, 149); */
  color: rgb(25, 25, 25);
}

.plan-header .plan-header-year {
  width: 110rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.plan-header .plan-header-month {
  width: 110rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}

.plan-wrap {
  width: 96%;
  position: relative;
  left: 2%;
  height: auto;
  /* background-color: rgb(244, 118, 149); */
  color: rgb(25, 25, 25);
}

.plan-wrap-week {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding-bottom: 20rpx;
}

.plan-wrap-week .plan-wrap-weeks {
  width: 14.285714%;
  text-align: center;
  font-size: 22rpx;
  color: rgb(158, 158, 158)
}

.plan-wrap-day {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  font-size: 26rpx;
}

.plan-wrap-day .plan-wrap-days {
  width: 14.285714%;
  text-align: center;
  height: 100%;
  line-height: 90rpx;
  transition: all .2s ease;
}

.plan-wrap-day .plan-wrap-days-gray {
  color: rgba(140, 140, 140, 1)
} 

.plan-wrap-day .plan-wrap-choose {
  background-color: #f47695;
  color: white;
  border-radius: 12rpx;
}