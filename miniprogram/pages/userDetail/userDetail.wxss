.page {
  width: 100%;
  height: 100%;
  position: relative;
  padding-top: 50%;
  box-sizing: border-box;
  background-color: rgb(251, 251, 251);
}

.detail-bgImg {
  width: 100%;
  /* height: 60rpx; */
  position: absolute;
  top: 0;
  bottom: 45%;
  left: 0;
  right: 0;
  overflow: hidden;
}

.detail-bgImg image {
  width: 100%;
  height: 100%;
}

.detail-wrap {
  margin: 0 8% 0 8%;
  min-height: 620rpx;
  background-color: white;
  box-shadow: 0 0px 2px 1px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  /* overflow: hidden; */
  position: relative;
}

.detail-img {
  position: absolute;
  top: -220rpx;
  width: 100%;
  height: 200rpx;
  text-align: center;
}

.detail-img image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.detail-text {
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
  /* color: white; */
}

.detail-text text {

}

.detail-button {
  /* position: fixed; */
  /* bottom: 3%; */
  /* height: 100rpx; */
  /* left: 8%; */
  /* right: 8%; */
  background-color: #35c1f8;
  color: white;
  margin: 40rpx 8% 20rpx 8%;
  /* box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1); */
  box-shadow: 0 0px 2px 1px rgba(0, 0, 0, 0.1);
  border: none;
}

.detail-button::after {
  border: none;
}

